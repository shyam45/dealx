<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

<div class="container-fluid ">
    <div class="row" style="width: 100%;">
        <div class="col-md-2 mt-5" style="background-color:#3074e3 ;">
            <div class="d-flex flex-column align-items-center align-items-sm-start mt-4 px-3 pt-2 text-white min-vh-100 ">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start "
                    id="menu">
                    <li>
                        <a href="/dashboard" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-light">
                            <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                        </a>

                    </li>
                    <li>
                        <a href="/my-products" class="nav-link px-0 align-middle text-light">
                            <span class="ms-1 d-none d-sm-inline">Premium Members</span></a>
                    </li>
                    <li>
                        <a href="/admin/logout" class="nav-link px-1 align-middle text-light">
                            <i class="bi bi-box-arrow-right fs-4"></i><span
                                class="ms-1 d-none d-sm-inline">Logout</span> </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9 py-3 ml-3" style="margin-top: 5rem;">
            <div class="row">
            <div class="col-md-4">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title font-weight-bold fs-4 text-primary"> Users </h5>

                  <div class="d-flex align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center" style="font-size: 32px; line-height: 0; width: 64px; height: 64px; flex-shrink: 0; flex-grow: 0; color: #4154f1; background: #f6f6fe;">
                      <i class='bx bx-user'></i>
                    </div>
                    <div class="ps-3">
                      <h6 style="font-size: 28px; color: #012970; font-weight: 700; margin: 0; padding: 0;">{{userCount}}</h6>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <div class="col-md-4">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title font-weight-bold fs-4 text-primary">Revenue </h5>

                  <div class="d-flex align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center" style="font-size: 32px; line-height: 0; width: 64px; height: 64px; flex-shrink: 0; flex-grow: 0; color: #4154f1; background: #f6f6fe;">
                      <i class='bx bx-rupee'></i>
                    </div>
                    <div class="ps-3">
                      <h6 style="font-size: 28px; color: #012970; font-weight: 700; margin: 0; padding: 0;">{{revenue}}</h6>
                    </div>
                  </div>
                </div>

              </div>
            </div>
            <div class="col-md-4">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title font-weight-bold fs-4 text-primary">Premium Members</h5>
                  <div class="d-flex align-items-center">
                    <div class="rounded-circle d-flex align-items-center justify-content-center" style="font-size: 32px; line-height: 0; width: 64px; height: 64px; flex-shrink: 0; flex-grow: 0; color: #4154f1; background: #f6f6fe;">
                      <i class='bx bx-crown'></i>
                    </div>
                    <div class="ps-3">
                      <h6 style="font-size: 28px; color: #012970; font-weight: 700; margin: 0; padding: 0;">{{soldProduct}}</h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            </div>
            <hr>

            <div class="mt-5">
              <div class="card recent-sales overflow-auto">
                <div class="card-body">
                  <h5 class="card-title">All Users Details</h5>

                  <table class="table table-borderless datatable" id="sales">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Phone</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Revenue</th>
                        <th scope="col">Account</th>
                        <th scope="col">Details</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each allUsers}}
                      {{#each this}}
                      {{#if this._id}}
                      <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.totalRevenue}}</td>
                        {{#if this.premium}}
                        <td>Premium</td>
                        {{else}}
                        <td>Guest</td>
                        {{/if}}
                        <td><a href="/admin/user/{{this._id}}" class="text-decoration-none text-primary">View Details</a></td>
                      </tr>
                      {{/if}}
                      {{/each}}
                      {{/each}}
                    </tbody>
                  </table>
                </div>

              </div>
            </div><!-- End Recent Sales -->

        </div>
        
    </div>
</div>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
<script>
    $(document).ready( function () {
    $('#sales').DataTable();
} );
</script>