<div class="row bg-light" style="margin-top:7rem">
    <div class="col-md-4 m-auto px-5 pt-5"
        style="border-style: solid;border-width: 1px;border-radius: 15px;border-color: silver;">
        <h2 class="text-center">Add Location</h2>
        <form action="/add_location" method="post" id="location">
            <div class="form-group mt-4">
                <input type="text" class="form-control" name='name' placeholder="First Name">
            </div>
            <div class="form-group mt-4">
                <input type="text" class="form-control" name='phone' placeholder="Phone Number">
            </div>

            <div class="form-group mt-4">
                <textarea class="form-control" name='address' placeholder="Address"></textarea>
            </div>

            <div class="form-group mt-4">
                <select name="city" class="form-control">
                  <option value="">City</option>
                  <option value="trivandrum">Trivandrum</option>
                  <option value="kochi">Kochi</option>
                  <option value="thrissur">Thrissur</option>
                  <option value="malappuram">Malappuram</option>
                  <option value="calicut">Calicut</option>
                </select>
            </div>

            <div class="form-group mt-4">
                <input type="text" class="form-control" name='pincode' placeholder="Pincode">
            </div>
            
            <div class="mt-2 text-center">
                <button type="submit" class="btn btn-primary mt-3 mb-5" >Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).ready(function(){
    $("#location").validate({
      errorClass: "validerrors",
  
      rules:{
        name:{
          required:true,
          minlength:4
        },
  
        phone:{
          required:true,
          minlength:10
        },
  
        address:{
          required:true,
        },

        city:{
          required:true,
        },

        pincode:{
          required:true,
          minlength:6
        },
      }
    })
  })
  
</script>