<section>
    <div class="row">
        {{#each product}}
        {{#if this._id}}
        <div class="col-md-4 m-auto mt-5 p-5" style="border-style: solid;border-width: 1px;border-radius: 15px;border-color: silver;">
            <h2 class="text-center">Edit Product</h2>
            <form action="/edit-product/{{this._id}}" enctype="multipart/form-data" method="post">
                <label for="">Name</label>
                <input type="text" name="name" class="form-control" value="{{this.name}}">

                <label for="">price</label>
                <input type="text" name="price" class="form-control" value="{{this.price}}">

                <label for="">description</label>
                <input type="text" name="description" class="form-control" value="{{this.description}}">

                <label for="">Image :</label><br>
                <img src="/images/product-images/{{this._id}}(1).jpg" alt="" style="height: 100px; width:100px; padding:10px" id="imgView">
                <input type="file" name="image" class="form-control" onchange="viewimage(event)">

                <button type="submit" class="btn btn-success mt-4">submit</button>
            </form>
        </div>
        {{/if}}
        {{/each}}
    </div>
</section>

<script>
    function viewimage(event){
        console.log(event)
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>