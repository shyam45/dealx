<div class="row mt-5 bg-light">
    <div class="col-md-3 m-auto mt-5 px-5 pt-5"
        style="border-style: solid;border-width: 1px;border-radius: 15px;border-color: silver;">
        <h2 class="text-center">Login</h2>
        <form action="/login" method="post">
            <div class="form-group mt-4">
                <input type="email" class="form-control" name='email' placeholder="E-mail">
            </div>
            <div class="form-group pt-3">
                <input type="password" class="form-control" name='password' placeholder="Password">
            </div>
            <div class="mt-2 text-center">
                <button type="submit" class="btn btn-primary mt-4" >Submit</button>
            </div>
            <div class="my-4 text-center ">
                <p style="font-size: 11px;">You dont have an account  <a href="/signup" class="text-decoration-none">Signup</a></p>
            </div>

        </form>
    </div>
</div>
